@section Scripts{ 

    <script type="text/javascript">

        var lst = @Html.Raw(Json.Serialize(Model.MediaContainer.Metadata));
        var client = "@Html.Raw(ViewBag.Client)";
        var token = "@Html.Raw(ViewBag.Token)";

        for (var i = 0; i < lst.length; i++) {
            let item = lst[i];
            let isActive = i == 0 ? "active" : "";

            let tag = `<div class="carousel-item ${isActive}">
                            <div class="d-flex align-items-center justify-content-center min-vh-100">
                                <img class="d-block w-100" src="${client}${item.thumb}?X-Plex-Token=${token}" alt="${item.title}">
                            </div>
                            <div class="carousel-caption">
                                <span class="my-title">${item.title}</span>
                                <h4 class="my-desc">${item.summary}</h4>
                            </div>
                        </div>`;

            $(".carousel-inner").append(tag);
        }

    </script>

}